            "id": {
              "type": "integer"
            },
            "studentId": {
              "type": "string"
            },
            "contentType": {
              "type": "string",
              "enum": ["VIDEO", "ARTICLE", "ASSESSMENT"]
            },
            "contentTypeId": {
              "type": "string"
            },
            "violationType": {
              "type": "string"
            },
            "createdAt": {
              "type": "string",
              "format": "date-time"
            },
            "updatedAt": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      }
    }
  }
  