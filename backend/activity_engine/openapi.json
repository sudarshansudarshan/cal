              "type": "integer"
            },
            "questionId": {
              "type": "string"
            },
            "studentId": {
              "type": "string"
            },
            "courseInstanceId": {
              "type": "string"
            },
            "value": {
              "type": "string"
            },
            "assessmentAttemptId": {
              "type": "integer"
            },
            "createdAt": {
              "type": "string",
              "format": "date-time"
            },
            "updatedAt": {
              "type": "string",
              "format": "date-time"
            }
          }
        },
        "StudentDescriptiveAnswer": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "questionId": {
              "type": "string"
            },
            "studentId": {
              "type": "string"
            },
            "courseInstanceId": {
              "type": "string"
            },
            "answerText": {
              "type": "string"
            },
            "assessmentAttemptId": {
              "type": "integer"
            },
            "createdAt": {
              "type": "string",
              "format": "date-time"
            },
            "updatedAt": {
              "type": "string",
              "format": "date-time"
            }
          }
        },
        "StudentMCQAnswer": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "questionId": {
              "type": "string"
            },
            "studentId": {
              "type": "string"
            },
            "courseInstanceId": {
              "type": "string"
            },
            "choiceId": {
              "type": "string"
            },
            "assessmentAttemptId": {
              "type": "integer"
            },
            "createdAt": {
              "type": "string",
              "format": "date-time"
            },
            "updatedAt": {
              "type": "string",
              "format": "date-time"
            }
          }
        },
        "StudentMSQAnswer": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "questionId": {
              "type": "string"
            },
            "studentId": {
              "type": "string"
            },
            "courseInstanceId": {
              "type": "string"
            },
            "choiceId": {
              "type": "string"
            },
            "assessmentAttemptId": {
              "type": "integer"
            },
            "createdAt": {
              "type": "string",
              "format": "date-time"
            },
            "updatedAt": {
              "type": "string",
              "format": "date-time"
            }
          }
        },
        "StudentViolationMetrics": {
          "type": "object",
